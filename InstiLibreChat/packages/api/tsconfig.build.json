{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "noEmitOnError": false
  },
  "exclude": ["node_modules", "dist", "types", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
